extends layout.pug

block content
    h1 Update Book
    form(action="post")
        p
            label(for="title") Title
            input(name="title" type="text" id="title" value="Title Variable")
        p
            label(for="author") Title
            input(name="author" type="text" id="author" value="Author Variable")
        p
            label(for="genre") Title
            input(name="genre" type="text" id="genre" value="Genre Variable")
        p
            label(for="year") Title
            input(name="year" type="text" id="year" value="Year Variable")
        p
            input(type="submit" value="Update Book")
    form(method="post" action="/books/:id/delete" onsubmit="return confirm('Do you really want to delete this book?');")
        p
            a.button(href="all_books.html") Cancel
        p
            input(type="submit" value="Delete Book")