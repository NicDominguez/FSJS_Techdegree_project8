extends layout.pug

block content
    h1 Books
    p
        a.button(href="/books/new") Create New Book
    form(method="post" action=`/books/?page=1`)
        p
            input(type="search", id="bookSearch", name="bookSearch", placeholder="Search for a book")
            input(type="submit" value="Search" )
    table
        thead
            tr
                th Title
                th Author
                th Genre
                th Year
        tbody
        each book in bookList.rows
            tr
                td
                    a(href="/books/" + book.id)= book.title
                td= book.author
                td= book.genre
                td= book.year
    include pagination
